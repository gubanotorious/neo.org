@model IEnumerable<NeoWeb.Models.Event>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Event";
}
@section Styles{
    <environment include="Development">
        <link rel="stylesheet" href="~/css/event.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/event.min.css" asp-append-version="true" />
    </environment>

}

<div class="event-banner">
    <div class="container">
        <div class="search-div">
            <h1 class="text-center mb-3">Find your next experience</h1>
            <form asp-action="index" method="get">
                <div class="input-group search-group">
                    <input name="k" type="text" value="@ViewBag.Keywords" class="form-control" placeholder="Search events or categories">
                    <select name="c" class="form-control d-none d-md-inline-block">
                        <option value="0">All Country</option>
                        @foreach (var item in ViewBag.Countries as IEnumerable<Country>)
                        {
                            if (item.Id == ViewBag.CountryId)
                            {
                                <option selected="selected" value="@item.Id">@item.Name</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        }
                    </select>
                    <select name="d" class="form-control d-none d-md-inline-block">
                        @for (int i = 0; i < (ViewBag.Dates as string[]).Length; i++)
                        {
                            @if (i == ViewBag.Date)
                            {
                                <option selected="selected" value="@i">@ViewBag.Dates[i]</option>
                            }
                            else
                            {
                                <option value="@i">@ViewBag.Dates[i]</option>
                            }
                        }
                    </select>
                    <div class="input-group-append">
                        <button class="btn btn-success" type="submit">@Localizer["Search"]</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@* 按类别筛选 *@
<div class="mb-3 text-center d-md-none">
    <div class="container">
        <a class="btn btn-sm btn-light mb-1" href="~/event/index">ALL</a>
        @foreach (var item in ViewBag.Types as IEnumerable<EventType>)
        {
            <a class="btn btn-sm btn-light mb-1" href="~/event/index?k=@item.ToString().ToLower()">@item</a>
        }
    </div>
</div>

<div class="container text-center">
    <div class="">

    </div>   
    <div class="news-list">
        <ul class="news-ul"></ul>
    </div>
</div>

<div class="container text-center" style="position: relative;">

    <div class="text-left m3">
        @if (ViewBag.UserRules)
        {
            <a asp-action="Create">@Localizer["Create a new event"]</a>
        }
    </div>
    <div class="row">
        <div class="col-12 col-md-8 text-center">
            @* 先显示未来的活动 *@
            @foreach (var item in Model.Where(p => p.EndTime >= DateTime.Now))
            {
                Html.RenderPartial("_EventPartialPage", item);
            }
            <div class="mt-4 mb-4" style="border-top: 3px dotted #aaa"></div>
            @* 再显示过去的活动 *@
            @foreach (var item in Model.Where(p => p.EndTime < DateTime.Now))
            {
                Html.RenderPartial("_EventPartialPage", item);
            }
            @await Html.PartialAsync("_LoginPartial")
        </div>
        <div class="d-none d-md-block col-md-4">
            <a class="d-block alert alert-light mb-2" href="~/event/index">ALL</a>
            @foreach (var item in ViewBag.Types as IEnumerable<EventType>)
            {
                <a class="d-block alert alert-light mb-2" href="~/event/index?k=@item.ToString().ToLower()">@item</a>
            }
            <div class="calender alert alert-light p-5" style="height: 300px;">
                <ul>
                    <li>Sun</li>
                    <li>Mon</li>
                    <li>Tues</li>
                    <li>Wed</li>
                    <li>Tur</li>
                    <li>Fri</li>
                    <li>Sat</li>
                </ul>
                <ul class="cal-tbody" id="calender"></ul>
            </div>
        </div>
    </div>
</div>
