@model IEnumerable<NeoWeb.Models.Event>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Event";
}
@section Styles{
    <environment include="Development">
        <link rel="stylesheet" href="~/css/event.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/event.min.css" asp-append-version="true" />
    </environment>

}

<div class="event-banner">
    <div class="container">
        <div class="search-div">
            <h1 class="text-center mb-3">Find your next experience</h1>
            <form asp-action="index" method="get">
                <div class="input-group search-group">
                    <input name="k" type="text" value="@ViewBag.Keywords" class="form-control" placeholder="Search events or categories">
                    <select name="c" class="form-control d-none d-md-inline-block">
                        <option value="0">All Country</option>
                        @foreach (var item in ViewBag.Countries as IEnumerable<Country>)
                        {
                            if (item.Id == ViewBag.CountryId)
                            {
                                <option selected="selected" value="@item.Id">@item.Name</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        }
                    </select>
                    <select name="d" class="form-control d-none d-md-inline-block">
                        @for (int i = 0; i < (ViewBag.Dates as string[]).Length; i++)
                        {
                            @if (i == ViewBag.Date)
                            {
                                <option selected="selected" value="@i">@ViewBag.Dates[i]</option>
                            }
                            else
                            {
                                <option value="@i">@ViewBag.Dates[i]</option>
                            }
                        }
                    </select>
                    <div class="input-group-append">
                        <button class="btn btn-success" type="submit">@Localizer["Search"]</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@* 按类别筛选 *@
<div class="mb-3 text-center d-md-none">
    <div class="container">
        <a class="btn btn-sm btn-light mb-1" href="~/event/index">ALL</a>
        @foreach (var item in ViewBag.Types as IEnumerable<EventType>)
        {
            <a class="btn btn-sm btn-light mb-1" href="~/event/index?k=@item.ToString().ToLower()">@item</a>
        }
    </div>
</div>

